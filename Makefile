BINARY_NAME=hcloud-k8s
GO_FILES=$(shell find . -name '*.go')

build:
	go build -o bin/${BINARY_NAME} cmd/hcloud-k8s/main.go cmd/hcloud-k8s/commands.go

build-all: build-linux-amd64 build-linux-arm64 build-windows-amd64 build-darwin-amd64 build-darwin-arm64

build-linux-amd64:
	GOOS=linux GOARCH=amd64 go build -o bin/${BINARY_NAME}-linux-amd64 cmd/hcloud-k8s/main.go cmd/hcloud-k8s/commands.go

build-linux-arm64:
	GOOS=linux GOARCH=arm64 go build -o bin/${BINARY_NAME}-linux-arm64 cmd/hcloud-k8s/main.go cmd/hcloud-k8s/commands.go

build-windows-amd64:
	GOOS=windows GOARCH=amd64 go build -o bin/${BINARY_NAME}-windows-amd64.exe cmd/hcloud-k8s/main.go cmd/hcloud-k8s/commands.go

build-darwin-amd64:
	GOOS=darwin GOARCH=amd64 go build -o bin/${BINARY_NAME}-darwin-amd64 cmd/hcloud-k8s/main.go cmd/hcloud-k8s/commands.go

build-darwin-arm64:
	GOOS=darwin GOARCH=arm64 go build -o bin/${BINARY_NAME}-darwin-arm64 cmd/hcloud-k8s/main.go cmd/hcloud-k8s/commands.go

test:
	go test ./...

clean:
	rm -rf bin/
